                        @Html.HiddenFor(model => model.DefaultAction)
                        @Html.HiddenFor(model => model.U_NAME)
                        @Html.HiddenFor(model => model.U_ENTDT)
                        @Html.HiddenFor(model => model.O_USER)
                        @Html.HiddenFor(model => model.T_ID)                     
