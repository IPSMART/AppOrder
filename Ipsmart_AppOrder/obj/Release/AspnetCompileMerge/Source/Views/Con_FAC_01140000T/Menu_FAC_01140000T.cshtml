                            <td style="border-bottom-left-radius:10px"></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td style="border-bottom-right-radius:10px"></td>
                        </tr>
                    </tfoot>
                </table>
            }
        </div>
    }
    <div class="container">
        <div id="partialDIV">
            @(new HtmlString(Model.MSG))
        </div>
    </div>
    <div class="container">
        <div id="innerDIV">
        </div>
    </div>
    <div id="main"></div>
