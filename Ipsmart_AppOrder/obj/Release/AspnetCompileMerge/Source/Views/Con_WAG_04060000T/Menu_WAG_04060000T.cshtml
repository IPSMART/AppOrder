@model Rossell_HO.Models.Rep_Budget_Mandays
@{
    ViewBag.Title = "Mandays Budget Vs Actual";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}
<form method="post">
    <h2>Mandays Budget Vs Actual</h2>

    <section class="content-wrapper main-content clear-fix">
        @using (Html.BeginForm())
        {
            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Fdate)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Fdate, new { style = "width:100px" })
                    @Html.ValidationMessageFor(model => model.Fdate)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Ldate)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Ldate)
                    @Html.ValidationMessageFor(model => model.Ldate)
                </div>
                <br />
                <div style="position:relative;border:solid 1px #e2dfdf;padding: 6px 6px 6px 6px; border-radius:10px;display:inline-block">
                    <div class="checkbox-inline">
                        <input type="checkbox" id="chkSup" name="chkSup" checked="checked" />
                        <label for="chkSup">If supress by zero</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                </div>
                <br />
                <br />
                <div style="position:relative;border:solid 1px #e2dfdf;padding: 6px 6px 6px 6px; border-radius:10px;display:inline-block">
                    <div class="radio-inline">
                        <input type="radio" name="KMCDOPT" value="KMCD" /><span style="font-weight:bold; vertical-align:top">KMCD WISE&nbsp;</span>
                    </div>
                    <div class="radio-inline">
                        <input type="radio" name="KMCDOPT" value="KMCDSUB" checked="checked" /><span style="font-weight:bold; vertical-align:top">KMCD SUB GROUP WISE&nbsp;</span>
                    </div>
                </div>
                <br />
                <br />
                <div style="position:relative;border:solid 1px #e2dfdf;padding: 6px 6px 6px 6px; border-radius:10px;display:inline-block;">
                    <div class="radio-inline">
                        <input type="radio" name="wages" value="W" checked="checked" /><span style="font-weight:bold; vertical-align:top">With Wages Mandays&nbsp;</span>
                    </div>
                    <div class="radio-inline">
                        <input type="radio" name="wages" value="S" /><span style="font-weight:bold; vertical-align:top">With Wages & Salary Mandays&nbsp;</span>
                    </div>
                </div>

                <br />
                <br />
                <p>
                    <input type="submit" formtarget="_blank" name="submitbutton" value="View Report" class="btn btn-success" />
                    <input type="submit" formtarget="_blank" name="submitbutton" value="Print Report" class="btn btn-success" />
                </p>
            </fieldset>
        }
    </section>
</form>

