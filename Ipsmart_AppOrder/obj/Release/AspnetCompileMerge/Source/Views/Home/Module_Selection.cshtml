@model IEnumerable<Rossell_HO.Models.MODULE>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Module Selection</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h2>Welcome to Module Selection</h2>
            <hr />
            <fieldset>
                <p>
                    @foreach (var item in Model)
                    {
                        if (item.PERMISSION == 'Y')
                        {
                            <div class="btn btn-primary btn-default">
                                <span class="glyphicon glyphicon-star"></span>
                                @Html.ActionLink(item.MODULE_NAME, "ModuleSelector", "Home", new { code = item.MODULE_CODE, controlschema = item.CONTROL_TABLE, menuschema = item.MENU_TABLE, sortby=item.MENU_SORT_BY,mname=item.MODULE_NAME }, new { @class = "btn btn-success" })
                            </div>                            
                        }
                    }
                </p>
            </fieldset>
        </div>     
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Classic ERP</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
