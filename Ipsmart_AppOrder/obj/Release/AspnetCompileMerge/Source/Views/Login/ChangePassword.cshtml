@model Rossell_HO.Models.Password
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change Password</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body>
    <div class="container body-content">
        <div class="jumbotron">
            <h1>Change Password</h1>
            <section class="content-wrapper main-content clear-fix">
                @using (Html.BeginForm())
                {
                    <fieldset>
                        <legend>Set your password</legend>                                                                     
                        <div class="editor-label">
                            @Html.LabelFor(model => model.CurrentPassword)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(model => model.CurrentPassword, new {@class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CurrentPassword)                            
                        </div>
                        <div class="editor-label">                            
                            @Html.LabelFor(model => model.NewPassword)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(model => model.NewPassword, new {@class = "form-control", maxlength = "10" })
                            @Html.ValidationMessageFor(model => model.NewPassword)                           
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.ConfirmPassword)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", maxlength = "10" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                        <div>
                            @Html.HiddenFor(model => model.CPF)
                        </div>
                        <br />
                        <p>
                            <input type="submit" value="Change" class="btn btn-success" />
                            <input type="reset" value="Reset" class="btn btn-info" />                           
                        </p>
                       <p>
                           @if (ViewBag.FlagCS == "0")
                           {
                            <span style="color:royalblue">@ViewBag.MessageCS</span>
                             <p><a href="@Url.Action("Module_Selection", "Home")"  class="btn btn-primary btn-lg">Module Selection &raquo;</a></p>
                           }
                           else 
                           {
                            <span style="color:royalblue"> @ViewBag.MessageCS @Html.ActionLink("Login", "Login", "Login")</span>
                           }
                      </p>
                    </fieldset>
                }
            </section>
        </div>
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Classic ERP</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
